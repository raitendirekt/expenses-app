<div class="wrapper">
  <div class="side-bar">
    <%= render "shared/side_bar" %>
  </div>
  <div class="top-table">
    <%= render "shared/header" %>

    <%= form_with(url: search_users_path, local: true, method: :get, class: "search-form") do |form| %>
      <%= form.text_field :keyword, placeholder: "ユーザーネームを入力", class: "search-input" %>
      <%= form.submit "検索", class: "search-btn" %>
    <% end %>
    <div class="contents row">
      <% @users.each do |user| %>
        <% unless current_user?(user) %>
          <%= user.nickname %>
          <% if current_user.following?(user) %>
            <%= form_for(current_user.following_relationships.find_by(following_id: user.id), html: { method: :delete }) do |f| %>
              <%= f.submit "Unfollow", class: "btn btn-large follow-btn" %>
            <% end %>
          <% else %>
            <%= user.nickname %>
            <%= form_for(current_user.following_relationships.build(following_id: user.id)) do |f| %>
              <div><%= f.hidden_field :following_id %></div>
              <%= f.submit "Follow", class: "btn btn-large btn-primary follow-btn" %>
            <% end %>
          <% end%>
        <% end %>
          <%# if current_user.following?(@user) %>
      <% end %>
    </div>
  </div>
</div>

