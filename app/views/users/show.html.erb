<div class="wrapper">
  <div class="side-bar">
    <%= render "shared/side_bar" %>
  </div>
  <div class="top-table">
    <%= render "shared/header" %>
    <div class="create-record">
      <%= link_to "記録する", new_expense_path, class:"post" %>
    </div>
    <%= link_to "プロフィールを編集する", edit_user_registration_path, class:"user-edit" %>
    <table>
      <tr>
        <th>出費日</th><th>カテゴリー</th><th>メモ</th><th>金額</th><th>編集</th><th>削除</th>
      </tr>
      <% @expenses.each do |expense| %>
      <tr>
        <div class="expense">
          <div class="expense-created_at">
            <td><%= "#{expense.date.month}月#{expense.date.day}日" %></td>
          </div>
          <div class="expense-category">
            <td><%= expense.category.name %></td>
          </div>
          <div class="expense-memo">
            <td><%= expense.memo %></td>
          </div>
          <div class="expense-amount">
            <td><%= "#{expense.amount}円" %></td>
          </div>
          <div class="expense-edit">
            <td><%= link_to "編集", edit_expense_path(expense.id) %></td>
            <td><%= link_to "削除", expense_path(expense.id), method: :delete %></td>
          </div>
        </div>
        </tr>
      <% end %>
    </table>
  </div>
</div>