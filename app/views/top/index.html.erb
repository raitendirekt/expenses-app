<%= render "shared/header" %>
<div class="wrapper">
  <div class="top">
    <div class="expense-header">
    </div>
    <% if user_signed_in? %>
      <div class="month-main">
        <div class="monthly-expense">
          <%= "#{@this_month}月の出費#{@month_sum}円" %>
        </div>
        <div class="category-expense">
          <% @expenses.each do |expense| %>
            <div class="expense">
              <div class="expense-created_at">
                <%= expense.created_at %>
              </div>
              <div class="expense-category">
                <%= expense.category.name %>
              </div>
              <div class="expense-amount">
                <%= "#{expense.amount}円" %>
              </div>
            </div>
          <% end %>
        </div>
        <% else %>
        <div class="lead-to-login">
          <%= link_to 'ログインしてください', new_user_session_path, class: "login" %>
        </div>
      </div>
    <% end %>
  </div>
  <div class="create-record">
    <%= link_to "記録する", new_expense_path, class:"post" %>
  </div>
</div>